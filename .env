# ─── TrustVault Environment Configuration ────────────────────────────────────
# Copy this to .env and fill in your values before running.
# NEVER commit .env to Git — add it to .gitignore

# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:Kshetra%402627@localhost:5433/trustvault
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Kshetra@2627
POSTGRES_DB=trustvault

# ── JWT Auth ──────────────────────────────────────────────────────────────────
# IMPORTANT: Change this to a random 32+ character string before deploying!
# Generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-32-char-string-before-deploying!
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ── MinIO Object Storage ──────────────────────────────────────────────────────
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=StrongPassword123
MINIO_ENDPOINT=http://localhost:9000

# ── OPA Policy Engine ─────────────────────────────────────────────────────────
OPA_URL=http://localhost:8181

# ── Storage Paths ─────────────────────────────────────────────────────────────
UPLOAD_DIR=uploads
CHUNKS_DIR=chunks
USE_MINIO=true
OPA_STRICT=false
MINIO_BUCKET=trustvault